{
  "name": "react-native-big-media-loader",
  "version": "0.1.0",
  "description": "Large media loader and picker for React Native with efficient chunked reading, native media picker, and media player support",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "react-native",
    "media",
    "file",
    "loader",
    "picker",
    "large-files",
    "chunked-reading",
    "turbo-module",
    "image-picker",
    "video-picker"
  ],
  "author": "Your Name <you@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/react-native-big-media-loader.git"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": ">=0.70.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "react-native-testing-library": "^12.0.0",
    "@testing-library/jest-native": "^5.0.0",
    "react-test-renderer": "^18.2.0",
    "metro-react-native-babel-preset": "^0.76.0",
    "ts-jest": "^29.0.0"
  },
  "files": [
    "src",
    "ios",
    "android",
    "react-native.config.js"
  ],
  "react-native": {
    "ios": {
      "podspec": "ios/BigMediaLoader.podspec"
    },
    "android": {
      "sourceDir": "android"
    }
  }
}
